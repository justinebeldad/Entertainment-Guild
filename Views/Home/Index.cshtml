@model List<Product>

@{
    ViewData["Title"] = "Home";
}

<h1>Featured Product</h1>

<p>Welcome to Entertainment Guild! We offer a variety of products with different genre on different medium.</p>


<h1>Product Categories</h1>

<div style="margin: 30px"></div>

<div>
    <form asp-controller="Product" asp-action="Index" method="get">
        <p>
            Title: <input type="text" name="searchQuery" />
            <input type="submit" value="Filter" />
        </p>
    </form>
    <table class="table"></table>
</div>

<div style="margin: 30px"></div>

<a asp-controller="Product" asp-action="Add">Add New Product</a>

<div><b>Books</b></div>
<table class = "table table-bordered table-responsive table-hover">
<tr>
    <th>Name</th>
    <th>Author</th>
    <th>Published</th>
    <th>Price</th>
</tr>
@foreach (Product product in Model)
    {
        if (product.Genre == 1)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Author</td>
                <td>@product.Published</td>
                <td>$@product.Price</td>
                <td>
                    <a asp-controller="Product" asp-action="Details"
                       asp-route-id="@product.ID">Details</a> |
                    <a asp-controller="Product" asp-action="Edit"
                       asp-route-id="@product.ID">Edit</a> |
                    <a asp-controller="Product" asp-action="Delete"
                       asp-route-id="@product.ID">Delete</a>
                </td>
            </tr>
        }
    }
</table>

