@model Product
@{
    ViewBag.Title = "Product Details";
}

<h2>Product Details</h2>

<div>
    <h4>@Model.Name</h4>
    <p><b>Description:</b> @Model.Description</p>
    <p><b>Author:</b> @Model.Author</p>
    <p><b>Published:</b> @Model.Published</p>
    <p><b>Updated By:</b> @Model.LastUpdatedBy</p>
    <p><b>Price:</b> $@Model.Price</p>
</div>